<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.taoyuanx.littlesso.server.dao.AccountDao">
    <resultMap id="BaseResultMap" type="com.taoyuanx.littlesso.server.entity.AccountEntity">

        <id column="ID" jdbcType="BIGINT" property="id"/>
        <result column="ACCOUNTNUM" jdbcType="VARCHAR" property="accountNum"/>
        <result column="PASSWORD" jdbcType="VARCHAR" property="password"/>
        <result column="STATUS" jdbcType="INTEGER" property="status"/>
        <result column="TYPE" jdbcType="INTEGER" property="type"/>
        <result column="LOCKED_ENDTIME" jdbcType="TIMESTAMP" property="lockedEndtime"/>
    </resultMap>
    <sql id="Base_Column_List">
    ID, ACCOUNTNUM, PASSWORD, STATUS, TYPE,LOCKED_ENDTIME
  </sql>

    <select id="findByAccountNum" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from ACCOUNT_INFO
        <where>
            <if test="accountNum!=null">
                and ACCOUNTNUM=#{accountNum}
            </if>

        </where>
    </select>

    <update id="updateAccountStatus">
        update  ACCOUNT_INFO set STATUS=#{accountStatus} where ID=#{accountId}
    </update>
    <update id="lockedAccountStatus">
                update  ACCOUNT_INFO set STATUS=#{accountStatus},LOCKED_ENDTIME=#{lockedEndtime} where ID=#{accountId}

    </update>
    <update id="unLockedAccountStatus">
            update  ACCOUNT_INFO set STATUS=#{accountStatus},LOCKED_ENDTIME=null where ID=#{accountId}
    </update>
</mapper>